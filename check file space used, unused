USE [YourDatabaseName];  -- replace with your database
GO

SELECT 
    name AS [LogicalFileName],
    physical_name AS [PhysicalFilePath],
    CAST(size/128.0 AS INT) AS [Size_MB],                 -- total file size in MB
    CAST(FILEPROPERTY(name, 'SpaceUsed')/128.0 AS INT) AS [UsedSpace_MB],  -- used space
    CAST((size - FILEPROPERTY(name, 'SpaceUsed'))/128.0 AS INT) AS [FreeSpace_MB],  -- free space
    CAST((FILEPROPERTY(name, 'SpaceUsed')*100.0)/size AS INT) AS [UsedPercent],       -- % used
    type_desc AS [FileType]
FROM sys.database_files;
