USE [YourDatabaseName];  -- replace with your database
GO

SELECT 
    name AS [LogicalFileName],
    physical_name AS [PhysicalFilePath],
    size/128.0 AS [Size_MB],                -- total file size in MB
    FILEPROPERTY(name, 'SpaceUsed')/128.0 AS [UsedSpace_MB],  -- used space in MB
    (size - FILEPROPERTY(name, 'SpaceUsed'))/128.0 AS [FreeSpace_MB],  -- free space in MB
    CAST((FILEPROPERTY(name, 'SpaceUsed')*100.0)/size AS DECIMAL(5,2)) AS [UsedPercent], -- % used
    type_desc AS [FileType]
FROM sys.database_files;
