USE [YourDatabaseName];  -- replace with your database
GO

SELECT 
    name AS [LogicalFileName],
    physical_name AS [PhysicalFilePath],
    ROUND(size/128.0, 0) AS [Size_MB],                 -- total file size, rounded
    ROUND(FILEPROPERTY(name, 'SpaceUsed')/128.0, 0) AS [UsedSpace_MB],  -- used space, rounded
    ROUND((size - FILEPROPERTY(name, 'SpaceUsed'))/128.0, 0) AS [FreeSpace_MB],  -- free space, rounded
    ROUND((FILEPROPERTY(name, 'SpaceUsed')*100.0)/size, 0) AS [UsedPercent],       -- % used, rounded
    type_desc AS [FileType]
FROM sys.database_files;
